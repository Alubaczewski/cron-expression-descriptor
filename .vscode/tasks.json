{
  "version": "2.0.0",
  "tasks": [
    {
      "taskName": "build",
      "command": "dotnet",
      "args": ["build"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$msCompile"
    },
    {
      "taskName": "test",
      "command": "dotnet",
      "args": [
        "test",
        "CronExpressionDescriptor.Test/CronExpressionDescriptor.Test.csproj"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": "$msCompile"
    },
    {
      "taskName": "pack",
      "command": "dotnet",
      "args": [
        "pack",
        "CronExpressionDescriptor/CronExpressionDescriptor.csproj",
        "--configuration",
        "release"
      ],
      "problemMatcher": ["$msCompile"]
    },
    {
      "taskName": "release",
      "command": "dotnet",
      "args": [
        "nuget",
        "push",
        "CronExpressionDescriptor/bin/release/*.nupkg",
        "-k",
        "${env:NUGET_API_KEY}"
      ],
      "problemMatcher": ["$msCompile"]
    }
  ]
}
